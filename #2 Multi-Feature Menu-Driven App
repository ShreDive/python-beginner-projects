# ADD feature 2 
run_app = True

while run_app == True:
    print("""
Welcome! Choose an option:
1. Greet user
2. Add two numbers
3. Check if a string is a palindrome
4. Exit
""")
    
    user_input = input("Enter your choice: ")

    if user_input == "1":
        name = input("Enter your name: ")
        print(f"Hello {name}")
    elif user_input == "2":
        num_1 = input("Enter a number: ")
        num_2 = input("Enter a number : ")
        num_1 = int(num_1)
        num_2 = int(num_2)
        sum = num_1 + num_2 
        print(f"The sum is : {sum}")
    elif user_input == "3":
        pass
    elif user_input == "4":
        print("Exiting")
        break
    else: 
        print("Invalid choice")

# ADD feature 3 

run_app = True

while run_app == True:
    print("""
Welcome! Choose an option:
1. Greet user
2. Add two numbers
3. Check if a string is a palindrome
4. Exit
""")
    
    user_input = input("Enter your choice: ")

    if user_input == "1":
        name = input("Enter your name: ")
        print(f"Hello {name}")
    elif user_input == "2":
        num_1 = input("Enter a number: ")
        num_2 = input("Enter a number : ")
        num_1 = int(num_1)
        num_2 = int(num_2)
        sum = num_1 + num_2 
        print(f"The sum is : {sum}")
    elif user_input == "3":
        word = input("Enter a word: ")
        reverse_word = ""
        for a in range(len(word)-1, -1, -1):
            reverse_word += word[a]
        if reverse_word == word:
            print("Palindrome")
        else:
            print("Not Palindrome")
    elif user_input == "4":
        print("Exiting")
        break
    else: 
        print("Invalid choice")


