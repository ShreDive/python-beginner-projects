# skeleton 

run_app = True

while run_app == True:
    print("""
Welcome! Choose an option:
1. Greet user
2. Add two numbers
3. Check if a string is a palindrome
4. Exit
""")
    
    user_input = input("Enter your choice: ")

    if user_input == "1":
        pass
    elif user_input == "2":
        pass
    elif user_input == "3":
        pass
    elif user_input == "4":
        print("Exiting")
        break
    else: 
        print("Invalid choice")

